{
    "name": "nypl/nypl-drupal",
    "description": "Install Drupal 8 with Composer. Basis: https://github.com/pantheon-systems/example-drops-8-composer",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "git",
            "url": "https://github.com/NYPL/nypl_emulsify"
        }
    ],
    "require": {
        "php": ">=7.2",
        "cweagans/composer-patches": "^1.0",
        "oomphinc/composer-installers-extender": "^1.1",
        "drupal-composer/drupal-scaffold": "^2.0.1",
        "drupal-pattern-lab/unified-twig-extensions": "^0.1",
        "drupal/address": "^1.7",
        "drupal/allowed_formats": "^1.1",
        "drupal/audiofield": "^1.9",
        "drupal/blazy": "^1.0",
        "drupal/business_rules": "^1.0@beta",
        "drupal/ckwordcount": "^1.0",
        "drupal/config_direct_save": "^1.0",
        "drupal/config_installer": "^1.0",
        "drupal/config_split": "^1.4",
        "drupal/console": "^1.9",
        "drupal/core": "^8.6.15",
        "drupal/crop": "^1.5",
        "drupal/devel": "^2.1",
        "drupal/easy_breadcrumb": "^1.12",
        "drupal/eck": "^1.0@alpha",
        "drupal/entity_browser": "^2.2",
        "drupal/facets": "^1.4",
        "drupal/field_group": "^3.0",
        "drupal/focal_point": "^1.0",
        "drupal/geocoder": "^2.2",
        "drupal/geolocation": "^1.11",
        "drupal/google_analytics": "^3.0",
        "drupal/image_effects": "^2.3",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/kint": "^2.1",
        "drupal/linkit": "^4.3",
        "drupal/media_entity_browser": "^1.0",
        "drupal/menu_block": "^1.5",
        "drupal/metatag": "^1.8",
        "drupal/notification": "^1.0",
        "drupal/office_hours": "^1.2",
        "drupal/paragraphs": "^1.8",
        "drupal/pathauto": "^1.4",
        "drupal/profile": "^1.0@RC",
        "drupal/redirect": "^1.4",
        "drupal/s3fs": "^3.0@alpha",
        "drupal/schema_metatag": "^1.3",
        "drupal/search_api": "^1.14",
        "drupal/search_api_solr": "^3.2",
        "drupal/select2": "^1.1",
        "drupal/simple_sitemap": "^3.2",
        "drupal/slick": "^1.1",
        "drupal/soundcloudfield": "^1.0@alpha",
        "drupal/stage_file_proxy": "^1.0@beta",
        "drupal/tablefield": "^2.0@alpha",
        "drupal/taxonomy_manager": "^1.0@alpha",
        "drupal/thunder_admin": "^2.8",
        "drupal/token": "^1.5",
        "drupal/twig_tweak": "^2.3",
        "drupal/unique_field_ajax": "^1.2",
        "drupal/video_embed_field": "^2.1",
        "drush-ops/behat-drush-endpoint": "^9.3",
        "drush/drush": "^9.7.1",
        "nypl/nypl_emulsify": "dev-master",
        "pantheon-systems/quicksilver-pushback": "~1",
        "rvtraveller/qs-composer-installer": "^1.1",
        "select2/select2": "^4.0",
        "vardot/blazy": "1.8.2.1",
        "vlucas/phpdotenv": "^3.4",
        "w8tcha/ckeditor-wordcount-plugin": "^1.17",
        "webflo/drupal-core-strict": "^8.6.15",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "behat/behat": "3.*",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "consolidation/robo": "^1.4",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "drupal/coder": "^8.3",
        "drupal/drupal-extension": "^3.1",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "mikey179/vfsstream": "^1.2",
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.4.0"
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "build-web-assets": "composer -n install --prefer-source --no-dev",
        "build-dev-assets": "composer -n update --prefer-source",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "apply-settings": "DrupalProject\\composer\\ScriptHandler::applyCustomSettings",
        "verify-libs": "DrupalProject\\composer\\ScriptHandler::verifyLibraries",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "@verify-libs"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "@verify-libs"
        ],
        "post-create-project-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-types": ["component"],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "web/libraries/{$name}": ["type:drupal-library", "type:component"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".htaccess",
                "web.config"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        },
        "bin-dir": "vendor/bin/",
        "vendor-dir": "vendor",
        "github-oauth": {

        }
    }
}
